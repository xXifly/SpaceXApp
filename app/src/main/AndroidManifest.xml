<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexandreexample.spacexapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Views.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.alexandreexample.spacexapp.Views.RocketActivity"
            android:label="Rocket" />
        <activity
            android:name="com.alexandreexample.spacexapp.Views.LaunchActivity"
            android:label="Launche" />
        <activity
            android:name="com.alexandreexample.spacexapp.Views.CapsuleActivity"
            android:label="Capsule" />
        <activity
            android:name="com.alexandreexample.spacexapp.Views.ShipActivity"
            android:label="Ship" />
        <activity
            android:name="com.alexandreexample.spacexapp.Views.ListActivity"
            android:label="List" />
        <activity
            android:name="com.alexandreexample.spacexapp.Views.ChoicesListActivity"
            android:label="List" />
    </application>

</manifest>