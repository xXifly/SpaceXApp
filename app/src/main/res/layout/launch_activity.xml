<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/launchSlider"
            android:layout_width="match_parent"
            android:layout_height="278dp"></com.daimajia.slider.library.SliderLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:background="#4EFFFFFF"
            android:padding="4dp"
            android:text="TextView"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/liens"
            android:padding="4dp"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wikipedia"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                app:srcCompat="@drawable/wikipedia" />

            <ImageView
                android:id="@+id/youtube"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                app:srcCompat="@drawable/youtube" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
