<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        app:srcCompat="@drawable/spacex"
        android:contentDescription="@string/logo" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRockets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#4EFFFFFF"
                android:text="@string/rockets"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnShips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#4EFFFFFF"
                android:text="@string/ships"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnCapsule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#4EFFFFFF"
                android:text="@string/capsule"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnLaunches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#4EFFFFFF"
                android:text="@string/launches"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnLatestLaunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#4EFFFFFF"
                android:text="@string/latest_launch"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnNextLaunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="#4EFFFFFF"
                android:text="@string/next_launch"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>